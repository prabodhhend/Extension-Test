{
	"manifest_version":2,
	"name":"To Do",
	"description":"Timer & Notification",
	"version":"0.0.1",

	"icons":{
		"16":"16.png",
		"48":"48.png"
	},

	
	"browser_action":{
		"default_icon":"icon.png",
		"default_title":"Timer",
		"default_popup":"popup.html"
	},
	"options_page":"options.html",

	"permissions":["storage","background","tabs","activeTab","notifications","http://*/*","https://*/*","https://ajax.googleapis.com/"],

	"background":{
		"scripts":["background.js"],
		"persistent":false
	}

